<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171" fx:controller="it.polito.tdp.metroparis.MetroController">
   <top>
      <Label text="Metro" BorderPane.alignment="CENTER" />
   </top>
   <center>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <HBox>
               <children>
                  <Label text="partenza">
                     <HBox.margin>
                        <Insets left="15.0" right="20.0" />
                     </HBox.margin>
                  </Label>
                  <ComboBox fx:id="listaPartenza" prefWidth="150.0" />
               </children>
               <VBox.margin>
                  <Insets bottom="15.0" top="15.0" />
               </VBox.margin>
            </HBox>
            <HBox prefHeight="47.0" prefWidth="478.0">
               <children>
                  <Label text="Arrivo">
                     <HBox.margin>
                        <Insets left="15.0" right="20.0" />
                     </HBox.margin>
                  </Label>
                  <ComboBox fx:id="listaArrivo" prefWidth="150.0">
                     <HBox.margin>
                        <Insets right="20.0" />
                     </HBox.margin>
                  </ComboBox>
                  <Button mnemonicParsing="false" onAction="#doSearch" text="ricerca" />
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
   <bottom>
      <TextArea fx:id="txtArea" prefHeight="174.0" prefWidth="478.0" BorderPane.alignment="CENTER" />
   </bottom>
